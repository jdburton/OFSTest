{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "aws_source_ami": "{{env `AWS_SOURCE_AMI_SLES_12`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "aws_vpc": "{{env `AWS_VPC`}}",
    "aws_subnet": "{{env `AWS_SUBNET`}}",
    "aws_security_group": "{{env `AWS_SECURITY_GROUP`}}",
    "user": "{{env `USER`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "m4.large",
    "spot_price" : "auto",
    "spot_price_auto_product" : "SUSE Linux (Amazon VPC)",
    "region": "{{user `aws_region`}}",
    "ami_name": "cloud-sles12-ofstest-new",
    "vpc_id": "{{user `aws_vpc`}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "security_group_id": "{{user `aws_security_group`}}",
    "associate_public_ip_address": true,
    "ssh_username": "ec2-user",
    "ssh_pty": "true",
    "ebs_optimized": true,
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "delete_on_termination": true,
        "volume_size": 100,
        "volume_type": "gp2"
      }
    ],
    "run_tags": { "Name": "Packer sles12 Builder for {{user `user`}}" }
  }],
  "provisioners": [
  
  {
    "type": "shell",
    "pause_before": "120s",
    "expect_disconnect": true,
    "inline": [
      "set -x",
      "ps -ef | grep zypp",
      "sudo zypper --non-interactive up",
      "sudo zypper --non-interactive --gpg-auto-import-keys  addrepo http://repo.saltstack.com/opensuse/SLE_12_SP1/systemsmanagement:saltstack.repo",
      "sudo zypper --non-interactive --gpg-auto-import-keys  refresh",
      "sudo zypper --non-interactive  install gcc salt salt-minion salt-master salt-syndic salt-ssh python-singledispatch",
      "sudo systemctl enable salt-master.service",
      "sudo systemctl enable salt-minion.service",
      "sudo systemctl disable SuSEfirewall2 SuSEfirewall2_init",
      "sudo chmod -R a+w /opt",
      "sudo chmod -R a+w /srv",
      "#sudo ln -s /etc/HOSTNAME /etc/hostname",
      "sudo sed -i 's/DHCLIENT_SET_HOSTNAME=\"yes\"/DH_CLIENT_SETHOSTNAME=\"no\"/' /etc/sysconfig/network/dhcp",
      "mkdir -p /opt/mpi",
      "sudo /sbin/reboot"
	  

    ]
  },
      {
      "type": "shell",
      "pause_before": "10s",
      "inline": [
        "set -x",
        "sudo bash -c 'echo 0 > /selinux/enforce'",
        "sudo systemctl restart salt-master.service",
        "sudo systemctl restart salt-minion.service",
      	"sudo chmod -R a+w /etc/salt",
        "sudo chmod -R a+w /var/log/salt",
        "sudo chmod -R a+w /var/cache/salt"
      	
      ]
    },
    {
      "type": "salt-masterless",
      "pause_before": "90s",
      "bootstrap_args": "",
      "local_state_tree": "./salt",
      "minion_config": "./salt/masterMinionConfig",
      "skip_bootstrap": true
    },
    {
      "type": "shell",
      "pause_before": "10s",
      "inline": [
        "sudo bash -c 'echo 0 > /selinux/enforce'",
        "sudo cp /boot/config-`uname -r` /usr/src/linux-`uname -r | sed s/-[\\d].*//`/.config",
        "cd /usr/src/linux-`uname -r | sed s/-[\\d].*//`; sudo make oldconfig && sudo make modules_prepare && sudo make prepare",
        "sudo ln -s /lib/modules/`uname -r`/build/Module.symvers /lib/modules/`uname -r`/source",
        "sudo /sbin/modprobe -v fuse",
        "sudo chmod -R a+w /opt",
        "ls -l /home/ec2-user",
        "sudo chown -R ec2-user /opt"
      ]
    }


  ]
}
