{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "aws_source_ami": "{{env `AWS_SOURCE_AMI_FEDORA_25`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "aws_vpc": "{{env `AWS_VPC`}}",
    "aws_subnet": "{{env `AWS_SUBNET`}}",
    "aws_security_group": "{{env `AWS_SECURITY_GROUP`}}",
    "user": "{{env `USER`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "m4.large",
    "spot_price" : "auto",
    "spot_price_auto_product" : "Linux/UNIX (Amazon VPC)",
    "region": "{{user `aws_region`}}",
    "ami_name": "cloud-fedora25-ofstest-new",
    "vpc_id": "{{user `aws_vpc`}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "security_group_id": "{{user `aws_security_group`}}",
    "associate_public_ip_address": true,
    "ssh_username": "fedora",
    "ebs_optimized": true,
    "ssh_pty": true,
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "delete_on_termination": true,
        "volume_size": 100
      }
    ],
    "run_tags": { "Name": "Packer Builder for {{user `user`}}" }
  }],
  "provisioners": [

  {
    "type": "shell",
    "pause_before": "30s",
    "inline": [
      "set -x",
      "sudo sed -i -e 's/^Defaults.*requiretty/# Defaults requiretty/g' /etc/sudoers",
	  "sudo dnf -y install wget salt-master salt-minion salt-syndic",
	  "sudo chmod -R a+w /opt",
	  "mkdir -p /opt/mpi",
      "sudo mkdir -p /var/log/journal",
      "sudo systemd-tmpfiles --create --prefix /var/log/journal",
      "sudo /sbin/reboot"

    ]
  },
  {
    "type": "shell",
    "pause_before": "10s",
    "inline": [
      "sudo chown -R fedora:fedora /tmp",
      "sudo chown -R fedora:fedora /opt"

    ]
  },
  {
    "type": "salt-masterless",
    "pause_before": "60s",
    "bootstrap_args": "",
    "local_state_tree": "./salt",
    "minion_config": "./salt/masterMinionConfig",
    "skip_bootstrap": true

  },
  {
    "type": "shell",
    "pause_before": "10s",
    "inline": [
      "sudo chown -R fedora:fedora /opt",
      "sudo /sbin/modprobe -v fuse",
      "sudo chmod a+x /bin/fusermount",
      "sudo chmod a+r /etc/fuse.conf"
    ]
  }


  ]
}
