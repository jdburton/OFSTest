{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "aws_source_ami": "{{env `AWS_SOURCE_AMI_OPENSUSE_13_2`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "aws_vpc": "{{env `AWS_VPC`}}",
    "aws_subnet": "{{env `AWS_SUBNET`}}",
    "aws_security_group": "{{env `AWS_SECURITY_GROUP`}}",
    "user": "{{env `USER`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "m3.large",
    "region": "{{user `aws_region`}}",
    "ami_name": "{{user `user`}}-packer-opensuse-13.2-{{timestamp}}",
    "vpc_id": "{{user `aws_vpc`}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "security_group_id": "{{user `aws_security_group`}}",
    "associate_public_ip_address": true,
    "ssh_username": "root",
    "ssh_pty": "true",
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "delete_on_termination": true,
        "volume_size": 16
      }
    ],
    "run_tags": { "Name": "Packer opensuse 13.2 Builder for {{user `user`}}" }
  }],
  "provisioners": [ 
  
  {
    "type": "shell",
    "inline": [
      
      "set -x",
      "sudo zypper --non-interactive up",
      "sudo zypper --non-interactive install cloud-init",
      "sudo useradd -m -b /home -u 1000 -U ec2-user",
       "sudo zypper --non-interactive --gpg-auto-import-keys  addrepo http://download.opensuse.org/repositories/devel:languages:python/openSUSE_13.2/devel:languages:python.repo",
      "sudo zypper --non-interactive  --gpg-auto-import-keys refresh",
      "sudo zypper  --non-interactive dup --from http://download.opensuse.org/repositories/devel:/languages:/python/openSUSE_13.2/",
      "sudo zypper --non-interactive install salt salt-cloud salt-minion salt-master salt-syndic salt-ssh",
      "#sudo zypper --non-interactive install binutils xfsprogs java-1_7_0-openjdk-devel nfs-kernel-server dmapi-devel openssh-askpass java-1_7_0-openjdk gdb nfs-doc strip automake libuuid-devel mdadm apache2-devel gcc git zip nfs-client make autoconf fuse-devel openldap2-back-meta apache2 subversion patchutils libacl-devel ip gcc-c++ gcc-fortran flex uuidd boost-devel traceroute java-1_7_0-openjdk-headless kernel-syms nfsidmap apache2-mod_nss fuse libtool xfs python3 libattr-devel perl-Crypt-SaltedHash libopenssl-devel attr openldap2 kernel-source yast2 patch openldap2-devel plymouth libaio-devel bison yast2-firstboot python3-base xfsdump openldap2-client xfsprogs-devel fuse-devel-static libxml2-devel pam-devel",
	  "mkdir -p /opt/mpi",
	  "sudo chmod -R a+w /opt",
	  "sudo /sbin/reboot"

    ]
  }
  ]
}
